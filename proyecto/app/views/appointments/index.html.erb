<h3 class="heading">
	Listado de Citas
</h3>
	

<table class="table table-striped table-bordered mediaTable">
	<thead>
		<tr>
			<th class="essential persist">ID</th>
			<th class="essential persist">Nombre paciente</th>
			<th class="essential persist">Nombre Doctor</th>
			<th class="essential persist">Fecha</th>
			<th class="essential persist">Estado</th>
			<th class="essential">Accion</th>
		</tr>
	</thead>
	<tbody>
		<% @appointments.each do |cita| %>
			<tr>
				<td><%=  link_to cita.id, cita %></td>
				<td><%= cita.doctor.name %></td>
				<td><%= cita.patient.name %></td>
				<td><%= cita.appointmentdate %></td>
				<% if cita.state %>
					<td>Atendida</td>
				<%else %>
					<td>No Atendida</td>
				<% end %>			
				<td>
					<a href="#" title="Edit"><i class="splashy-document_letter_edit"></i></a>
					<a href="#" title="Accept"><i class="splashy-document_letter_okay"></i></a>
					<a href="#" title="Remove"><i class="splashy-document_letter_remove"></i></a>
				</td>
			</tr>
		<% end %>		
	</tbody>
</table>

<%= link_to "Nueva Cita", new_appointment_path %>